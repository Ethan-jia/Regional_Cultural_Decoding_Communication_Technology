.box-mode, .videos-wrap .up-page .videos-box {
  width: 25vw;
  height: 25vw;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 2vh;
  margin-left: 4vw;
}
.full {
  width: 100%;
  height: 100%;
}
.videos-wrap {
  width: 100vw;
  margin-top: 3vh;
}
.videos-wrap .videos-title {
  display: flex;
  flex-direction: row;
  margin-left: 5vw;
  margin-top: 3vh;
}
.videos-wrap .videos-title .upload-pic {
  width: 20px;
  height: 18px;
  margin-top: 0.2vh;
}
.videos-wrap .videos-title .title-content1 {
  margin-left: 2vw;
  font-weight: bold;
  letter-spacing: 0.1px;
}
.videos-wrap .videos-title .title-content2 {
  margin-left: 1vw;
  margin-top: 0.8vh;
  font-size: 11px;
  color: #969696;
}
.videos-wrap .up-page {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.videos-wrap .up-page .show-box:nth-child(3n) {
  margin-right: 0rpx;
}
.videos-wrap .up-page .videos-box {
  position: relative;
  margin-bottom: 4vw;
  margin-right: 4vw;
}
.videos-wrap .up-page .videos-box .delete-icon {
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 5rpx;
  top: 3rpx;
  z-index: 1000;
}
.videos-wrap .videos-btn {
  margin-top: 2vh;
}
.videos-wrap .videos-btn .btn {
  width: 80vw;
  height: 6vh;
  background-color: #4cca78;
  border-radius: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.videos-wrap .videos-btn .btn .btn-content {
  font-size: 16px;
  color: #ffffff;
  letter-spacing: 2px;
}
.videos-wrap .bottom-content .bottom-pic {
  width: 100vw;
  height: 35vh;
  position: fixed;
  bottom: 0;
}
