.matting-wrap {
  width: 100vw;
  position: absolute;
}
.matting-wrap .matting-step {
  text-align: center;
}
.matting-wrap .matting-step .uni-popup {
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
}
.matting-wrap .matting-step .recording-content .recording {
  background-color: rgb(243, 243, 243);
}
.matting-wrap .matting-step .recording-content .recording::after {
  border-bottom: none;
}
.matting-wrap .matting-step .recording-content .selecting {
  background-color: rgb(243, 243, 243);
  border-top: none;
}
.matting-wrap .matting-step .recording-content .canceling {
  background-color: rgb(243, 243, 243);
}
.matting-wrap .matting-step .recording-content .canceling::after {
  border-bottom: none;
}
.matting-wrap .matting-step .step1 {
  width: 90vw;
  height: 20vh;
  margin-top: 5%;
}
.matting-wrap .matting-step .step2 {
  width: 90vw;
  height: 20vh;
  margin-top: 2%;
}
.matting-wrap .matting-step .step3 {
  width: 90vw;
  height: 18vh;
  margin-top: 2%;
}
.matting-wrap .bottom-content .bottom-pic {
  width: 100vw;
  height: 35vh;
  position: fixed;
  bottom: 0;
}
