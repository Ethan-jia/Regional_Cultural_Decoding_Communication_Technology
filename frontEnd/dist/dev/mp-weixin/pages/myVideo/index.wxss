.myVideo-wrap {
  position: absolute;
  width: 100vw;
  height: 100vh;
}
.myVideo-wrap .myVideo-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 2vh;
}
.myVideo-wrap .myVideo-title .title {
  font-size: 12px;
  color: #999999;
}
.myVideo-wrap .myVideo-content {
  width: 90vw;
  margin-left: 5vw;
}
.myVideo-wrap .myVideo-content .myVideo {
  width: 100vw;
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
}
.myVideo-wrap .myVideo-content .myVideo .picture-content .picture {
  width: 30vw;
  height: 14vh;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo {
  display: flex;
  flex-direction: row;
  margin-left: 1vw;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info1 {
  display: flex;
  flex-direction: column;
  margin-left: 2.5vw;
  margin-top: 2vh;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info1 .createDate {
  font-size: 15px;
  font-weight: bold;
  margin-top: 0.5vh;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info1 .validDate {
  font-size: 11px;
  color: #999999;
  margin-top: 2.5vh;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info2 {
  display: flex;
  flex-direction: column;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info2 .btn1 {
  font-size: 11px;
  color: #999999;
  background-color: white;
  position: absolute;
  right: 0;
  margin-right: 2vw;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info2 .btn2 {
  font-size: 11px;
  color: #999999;
  background-color: white;
  position: absolute;
  right: 0;
  margin-right: 2vw;
  margin-top: 5vh;
}
.myVideo-wrap .myVideo-content .myVideo .videoInfo .info2 .btn3 {
  font-size: 11px;
  color: #999999;
  background-color: white;
  position: absolute;
  right: 0;
  margin-right: 2vw;
  margin-top: 10vh;
}
.myVideo-wrap .uni-pagination {
  width: 90vw;
  margin-left: 5vw;
  margin-top: 2vh;
}
.myVideo-wrap .bottom-content .bottom-pic {
  width: 100vw;
  height: 35vh;
  position: fixed;
  bottom: 0;
}
